<div class="col-sm-6">
    <div class="panel panel-default">
        <div class="panel-body">
            <form class="form-horizontal" novalidate="novalidate" action="index.php" method="POST">

                <div class="form-group form-group-lg">
                    <label for="login_email" class="col-sm-2 control-label">Email</label>
                    <div class="col-sm-10">
                        <input type="email" class="form-control" placeholder="Email" id="login_email" name="login[email]" value="{{ email }}">
                        {% if errors.email %}
                            <div class="text-danger">{{ errors.email }}</div>
                        {% endif %}
                    </div>
                </div>
                <div class="form-group form-group-lg">
                    <label for="login_password" class="col-sm-2 control-label">Password</label>
                    <div class="col-sm-10">
                        <input type="password" class="form-control input-lg" placeholder="Password" id="login_password" name="login[password]">
                        {% if errors.password %}
                            <div class="text-danger">{{ errors.password }}</div>
                        {% endif %}
                    </div>
                </div>
                {% if errors.generic %}
                    <div class="alert alert-danger">{{ errors.generic }}</div>
                {% endif %}
                <div class="form-group form-group-lg">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-lg btn-primary" name="index_form" value="login">Entra</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>